<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/createChatToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/createChatToolbarTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Написать сообщение"
            android:textColor="@color/product_black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/createChatCanselButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Отмена" />
    </LinearLayout>

    <EditText
        android:id="@+id/createChatSearchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="16dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_search"
        android:drawableTint="@color/product_text_dark_gray"
        android:hint="Поиск"
        android:imeOptions="actionSearch"
        android:inputType="textVisiblePassword"
        android:paddingHorizontal="8dp"
        android:textColor="@color/product_black"
        android:textColorHint="@color/product_text_dark_gray"
        android:textSize="16sp" />

    <include layout="@layout/item_divider" />

    <include
        android:id="@+id/createChatGroupItem"
        layout="@layout/item_create_chat_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/item_divider" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/createChatContactsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="8dp"
        android:layout_weight="1" />
</LinearLayout>