<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/TextHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:text="@string/login_title" />

        <TextView
            style="@style/TextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/login_email" />

        <EditText
            android:id="@+id/loginEmailEditText"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:hint="@string/login_email_hint" />

        <TextView
            android:id="@+id/loginEmailHintTextView"
            style="@style/ErrorTextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="16dp"
            android:text="@string/login_wrong_email_hint"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            style="@style/TextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:text="@string/login_password" />

        <EditText
            android:id="@+id/loginPasswordEditText"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:hint="@string/login_password_hint" />

        <TextView
            android:id="@+id/loginPasswordHintTextView"
            style="@style/ErrorTextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginHorizontal="8dp"
            android:text="@string/login_wrong_password_hint"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/loginForgetPasswordLinkTextView"
            style="@style/TextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="40dp"
            android:text="@string/login_forget_password"
            android:textSize="12sp" />

        <Button
            android:id="@+id/loginButton"
            style="@style/MainButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:text="@string/login_button" />


        <TextView
            style="@style/SubtextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/login_sign_up" />

        <TextView
            android:id="@+id/loginSignUpLinkTextView"
            style="@style/TextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/login_sign_up_link"
            android:textColor="@color/product_violet" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>