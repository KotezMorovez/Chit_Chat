<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <gradient
                android:startColor="@color/product_text_dark_gray"
                android:endColor="@color/product_text_gray"
                android:angle="90"/>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>